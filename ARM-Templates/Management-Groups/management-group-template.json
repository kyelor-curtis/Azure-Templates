{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/tenantDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "mgName":{
            "type": "string"
        },
        "mgDisplayName":{
            "type": "string"
        },
        "mgScope":{
            "type": "string"
        },
        "mgParentId":{
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2021-04-01",
            "name": "[parameters('mgName')]",
            "scope": "[parameters('mgScope')]",
            "properties": 
            {
                "details": 
                {
                    "parent": 
                    {
                        "id": "[concat('/providers/Microsoft.Management/managementGroups/',parameters('mgParentId'))]"
                    }
                },
                "displayName": "[parameters('mgDisplayName')]"
            }
        }
    ],
    "outputs": {}
}